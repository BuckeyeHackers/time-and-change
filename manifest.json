{
  "manifest_version": 2,
  "name": "Time and Change",
  "description": "This extension will help users visualize their spending in work hours.",
  "version": "1.0",
  "content_scripts": [ {"matches": ["https://*/*", "http://*/*"], "css": ["main.css"], "js": ["main.js", "basic.js"], "run_at": "document_end", "all_frames": true} ],
  "browser_action": {
   "default_popup": "popup.html"
  },
  "permissions": [
   "https://*/",
   "activeTab",
   "tabs",
   "storage"
  ]
}

